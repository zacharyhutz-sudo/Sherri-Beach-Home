---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/Sherri-Beach-Home/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | There’s always time for the sea</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
		<style is:global>
			:root {
				--color-terracotta: #9F6C52;
				--color-sand: #f2efeb;
				--color-cream: #EEE7DD;
				--color-slate: #A7B9C6;
				--color-blue: #92ABBB;
			}
			
			html, body {
				margin: 0;
				width: 100%;
				min-height: 100vh;
				font-family: 'Lato', sans-serif;
				background-color: var(--color-sand);
				color: var(--color-terracotta);
			}

			h1, .font-header {
				font-family: 'Cormorant Garamond', serif;
				text-transform: uppercase;
				letter-spacing: 0.05em;
				font-weight: 500;
			}

			h2, h3, .font-subheader {
				font-family: 'Cormorant Garamond', serif;
				text-transform: uppercase;
				letter-spacing: 0.15em;
				font-weight: 500;
			}

			.nav-link {
				font-family: 'Cormorant Garamond', serif;
				text-transform: uppercase;
				letter-spacing: 0.2em;
				font-size: 0.875rem;
			}
		</style>
	</head>
	<body class="selection:bg-[#A7B9C6] selection:text-white">
		<nav class="max-w-6xl mx-auto px-6 py-6 flex flex-col md:flex-row justify-between items-center gap-8">
			<a href="/Sherri-Beach-Home/" class="text-2xl md:text-3xl font-header hover:opacity-80 transition-opacity text-center md:text-left">
				There’s always time for the sea
			</a>
			<div class="flex gap-8 nav-link">
				<a href="/Sherri-Beach-Home/" class="hover:border-b border-[#9F6C52] transition-all">Home</a>
				<a href="/Sherri-Beach-Home/guide" class="hover:border-b border-[#9F6C52] transition-all">Cape Guide</a>
				<a href="/Sherri-Beach-Home/book" class="hover:border-b border-[#9F6C52] transition-all">Book Now</a>
			</div>
		</nav>
		<main>
			<slot />
		</main>
		<footer class="max-w-6xl mx-auto px-6 py-20 text-center border-t border-[#9F6C52]/10 mt-20">
			<p class="nav-link opacity-60 mb-6">
				&copy; {new Date().getFullYear()} There’s always time for the sea · Cape San Blas, FL
			</p>
			<!-- Hidden Admin Login -->
			<div class="flex items-center justify-center gap-2 opacity-40 hover:opacity-60 transition-opacity">
				<input 
					type="password" 
					id="admin-password" 
					placeholder="•••••" 
					class="w-24 px-2 py-1 text-xs bg-transparent border border-[#9F6C52]/30 rounded text-center focus:outline-none focus:border-[#9F6C52]"
				/>
				<button 
					id="admin-login-btn"
					class="text-xs nav-link opacity-70 hover:opacity-100 transition-opacity"
				>
					Login
				</button>
			</div>
		</footer>

		<script>
			const passwordInput = document.getElementById('admin-password') as HTMLInputElement;
			const loginBtn = document.getElementById('admin-login-btn');
			
			function attemptLogin() {
				if (passwordInput.value === 'barrierdunes') {
					window.location.href = '/Sherri-Beach-Home/admin';
				} else {
					passwordInput.value = '';
					passwordInput.placeholder = 'Try again';
					setTimeout(() => {
						passwordInput.placeholder = '•••••';
					}, 1500);
				}
			}

			loginBtn?.addEventListener('click', attemptLogin);
			passwordInput?.addEventListener('keypress', (e) => {
				if (e.key === 'Enter') attemptLogin();
			});
		</script>
	</body>
</html>
