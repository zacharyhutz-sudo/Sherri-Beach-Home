---
const images = import.meta.glob('../../public/images/gallery/*.{jpg,JPG,jpeg,JPEG,webp,WEBP,avif,AVIF}', { eager: true });
const galleryImages = Object.values(images).map(img => {
  const src = typeof img.default === 'string' ? img.default : img.default.src;
  return src.replace('/public', '/Sherri-Beach-Home');
}).sort();
---

<div class="gallery-wrapper relative mb-32 group/gallery">
  <!-- Scrolling Container -->
  <div 
    id="gallery-scroll"
    class="overflow-x-auto snap-x snap-mandatory scrollbar-hide w-screen left-1/2 right-1/2 -ml-[50vw] -mr-[50vw] relative cursor-grab active:cursor-grabbing"
  >
    <!-- Two-row Grid with height-constrained items -->
    <div class="flex flex-col gap-1 h-[400px] md:h-[600px] flex-wrap w-fit">
      {galleryImages.map((src, index) => (
        <div 
          class={`flex-none snap-center overflow-hidden group relative h-[calc(50%-2px)] ${
            index % 3 === 0 ? 'aspect-[4/3]' : 
            index % 2 === 0 ? 'aspect-square' : 'aspect-video'
          }`}
          onclick={`openLightbox(${index})`}
        >
          <img 
            src={src} 
            alt="Thereâ€™s Always Time for the Sea" 
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-[#9F6C52]/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex items-center justify-center">
            <span class="text-white bg-[#9F6C52]/80 p-3 rounded-full shadow-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </span>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Navigation Buttons Underneath -->
  <div class="flex justify-center gap-4 mt-8">
    <button 
      id="gallery-prev"
      class="bg-white hover:bg-[#92ABBB] hover:text-white p-3 shadow-sm transition-all rounded-full border border-[#92ABBB]/20 group/btn"
      aria-label="Previous images"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#9F6C52] group-hover/btn:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </button>

    <button 
      id="gallery-next"
      class="bg-white hover:bg-[#92ABBB] hover:text-white p-3 shadow-sm transition-all rounded-full border border-[#92ABBB]/20 group/btn"
      aria-label="Next images"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#9F6C52] group-hover/btn:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </button>
  </div>

  <!-- Lightbox Overlay -->
  <div id="lightbox" class="fixed inset-0 z-[100] bg-[#1a1a1a]/95 backdrop-blur-md hidden flex-col items-center justify-center p-4 md:p-10 opacity-0 transition-opacity duration-300">
    <button onclick="closeLightbox()" class="absolute top-6 right-6 text-white/50 hover:text-white transition-colors p-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <div class="relative w-full max-w-6xl flex items-center justify-center">
      <button onclick="prevImage()" class="absolute left-0 md:-left-16 text-white/50 hover:text-white transition-colors p-4 z-10">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>

      <img id="lightbox-img" src="" alt="Gallery Preview" class="max-w-full max-h-[85vh] object-contain rounded-lg shadow-2xl" />

      <button onclick="nextImage()" class="absolute right-0 md:-right-16 text-white/50 hover:text-white transition-colors p-4 z-10">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>
    
    <div class="mt-6 text-white/60 font-subheader tracking-widest text-sm" id="lightbox-counter"></div>
  </div>
</div>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>

<script is:inline define:vars={{ galleryImages }}>
  let currentIndex = 0;
  const lightbox = document.getElementById('lightbox');
  const lightboxImg = document.getElementById('lightbox-img');
  const counter = document.getElementById('lightbox-counter');
  const scrollContainer = document.getElementById('gallery-scroll');
  const btnPrev = document.getElementById('gallery-prev');
  const btnNext = document.getElementById('gallery-next');

  // Horizontal Scroll Navigation
  btnNext?.addEventListener('click', () => {
    scrollContainer.scrollBy({ left: scrollContainer.offsetWidth * 0.8, behavior: 'smooth' });
  });

  btnPrev?.addEventListener('click', () => {
    scrollContainer.scrollBy({ left: -scrollContainer.offsetWidth * 0.8, behavior: 'smooth' });
  });

  // Lightbox logic
  window.openLightbox = (index) => {
    currentIndex = index;
    updateLightbox();
    lightbox.classList.remove('hidden');
    setTimeout(() => {
      lightbox.classList.add('flex');
      lightbox.style.opacity = '1';
    }, 10);
    document.body.style.overflow = 'hidden';
  };

  window.closeLightbox = () => {
    lightbox.style.opacity = '0';
    setTimeout(() => {
      lightbox.classList.add('hidden');
      lightbox.classList.remove('flex');
    }, 300);
    document.body.style.overflow = '';
  };

  window.nextImage = () => {
    currentIndex = (currentIndex + 1) % galleryImages.length;
    updateLightbox();
  };

  window.prevImage = () => {
    currentIndex = (currentIndex - 1 + galleryImages.length) % galleryImages.length;
    updateLightbox();
  };

  function updateLightbox() {
    lightboxImg.src = galleryImages[currentIndex];
    counter.textContent = `${currentIndex + 1} / ${galleryImages.length}`;
  }

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (lightbox.classList.contains('hidden')) return;
    if (e.key === 'ArrowRight') nextImage();
    if (e.key === 'ArrowLeft') prevImage();
    if (e.key === 'Escape') closeLightbox();
  });
</script>
