---
import Layout from '../layouts/Layout.astro';
import Gallery from '../components/Gallery.astro';
---

<Layout title="Welcome">
	<div class="max-w-6xl mx-auto px-6">
		<!-- Hero & Introduction Section with Solid Background -->
		<div class="bg-[#b6b791] w-screen left-1/2 right-1/2 -ml-[50vw] -mr-[50vw] relative pt-12 pb-24 mb-24">
			<div class="max-w-[1400px] mx-auto px-6">
				<div class="flex flex-col md:flex-row items-center gap-12 md:gap-24">
					<!-- Hero Polaroids (Left on Desktop) -->
					<div class="w-full md:w-1/2">
						<div class="relative inline-block w-full max-w-[600px]">
							<!-- Main Polaroid Container -->
							<div class="bg-white p-1 pb-4 shadow-2xl rounded-sm border border-gray-100 relative z-0">
								<img 
									src="/Sherri-Beach-Home/images/hero-polaroid.jpg" 
									alt="Cape San Blas" 
									class="w-full aspect-video object-cover grayscale-[0.1] contrast-[1.05]"
								/>
							</div>

							<!-- Smaller Polaroid (Overlapping Bottom Right) -->
							<div class="absolute -bottom-6 -right-4 md:-right-8 w-32 md:w-48 bg-white p-0.5 pb-3 shadow-2xl rounded-sm border border-gray-100 transform rotate-6 z-10 transition-transform hover:rotate-3 duration-500">
								<img 
									src="/Sherri-Beach-Home/images/hero-small.webp" 
									alt="Beach View" 
									class="w-full aspect-square object-cover grayscale-[0.05]"
								/>
							</div>
						</div>
					</div>

					<!-- Introduction (Right on Desktop) -->
					<div class="w-full md:w-1/2 text-left">
						<h2 class="text-3xl md:text-5xl mb-8 font-header text-white">A Coastal Retreat</h2>
						<div class="text-lg md:text-xl leading-relaxed space-y-6 text-white/90">
							<p>
								Welcome to our slice of paradise in Cape San Blas, Florida. Nestled between the crystal-clear Gulf of Mexico and the calm St. Joseph Bay, 
								Thereâ€™s Always Time for the Sea offers the perfect blend of luxury, comfort, and natural beauty.
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>

		<section class="mb-32">
			<h2 class="text-3xl font-header mb-12 text-[#92ABBB] text-center">The Space</h2>
			
			<div class="grid md:grid-cols-3 gap-12">
				<!-- Bedrooms -->
				<div>
					<h3 class="text-xl font-subheader mb-6 text-[#9F6C52]">2 Bedrooms</h3>
					<div class="space-y-6">
						<div>
							<p class="font-bold text-sm uppercase tracking-wider mb-1">Master Bedroom</p>
							<p class="opacity-80">1 King Bed</p>
							<p class="text-sm italic opacity-60">Spacious master suite</p>
						</div>
						<div>
							<p class="font-bold text-sm uppercase tracking-wider mb-1">First Floor</p>
							<p class="opacity-80">2 Queen Beds</p>
						</div>
						<p class="text-sm font-medium pt-2 border-t border-[#9F6C52]/10">Sleeps 4 Guests</p>
					</div>
				</div>

				<!-- Bathrooms -->
				<div>
					<h3 class="text-xl font-subheader mb-6 text-[#9F6C52]">2 Bathrooms</h3>
					<div class="space-y-6">
						<div>
							<p class="font-bold text-sm uppercase tracking-wider mb-1">Master Bath</p>
							<p class="opacity-80">Bathtub & Shower</p>
						</div>
						<div>
							<p class="font-bold text-sm uppercase tracking-wider mb-1">Guest Bath</p>
							<p class="opacity-80">Bathtub or Shower</p>
						</div>
					</div>
				</div>

				<!-- Amenities/Spaces -->
				<div>
					<h3 class="text-xl font-subheader mb-6 text-[#9F6C52]">Spaces</h3>
					<div class="space-y-6">
						<div>
							<p class="font-bold text-sm uppercase tracking-wider mb-1">Kitchen</p>
							<p class="text-sm opacity-80">Fully stocked with Crockpot, toaster, Keurig, and more.</p>
						</div>
						<div>
							<p class="font-bold text-sm uppercase tracking-wider mb-1">Balcony</p>
							<p class="text-sm opacity-80">7 beach chairs, 3 umbrellas, wagon, and toys.</p>
						</div>
						<div>
							<p class="font-bold text-sm uppercase tracking-wider mb-1">Patio</p>
							<p class="text-sm opacity-80">Deck seating and Weber grill for guest use.</p>
						</div>
						<div>
							<p class="font-bold text-sm uppercase tracking-wider mb-1">Extras</p>
							<p class="text-sm opacity-80">Living room and outdoor play area.</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<Gallery />

		<section class="mt-32 mb-32">
			<h2 class="text-3xl font-header mb-12 text-[#92ABBB] text-center">Barrier Dunes Gated Community</h2>
			
			<div class="grid md:grid-cols-3 gap-12">
				<!-- Beach & Water -->
				<div>
					<h3 class="text-xl font-subheader mb-6 text-[#9F6C52]">Beach & Water</h3>
					<div class="space-y-6">
						<div>
							<p class="font-bold text-sm uppercase tracking-wider mb-1">Direct Access</p>
							<p class="opacity-80">Beach access just steps away</p>
						</div>
						<div>
							<p class="font-bold text-sm uppercase tracking-wider mb-1">Swimming Pools</p>
							<p class="opacity-80">2 community pools for guest use</p>
						</div>
						<div>
							<p class="font-bold text-sm uppercase tracking-wider mb-1">Ponds</p>
							<p class="opacity-80">3 scenic ponds throughout the grounds</p>
						</div>
					</div>
				</div>

				<!-- Sports & Recreation -->
				<div>
					<h3 class="text-xl font-subheader mb-6 text-[#9F6C52]">Sports & Recreation</h3>
					<div class="space-y-6">
						<div>
							<p class="font-bold text-sm uppercase tracking-wider mb-1">Court Sports</p>
							<p class="opacity-80">Tennis & Pickleball courts</p>
						</div>
						<div>
							<p class="font-bold text-sm uppercase tracking-wider mb-1">Family Fun</p>
							<p class="opacity-80">On-site playground for children</p>
						</div>
					</div>
				</div>

				<!-- Amenities -->
				<div>
					<h3 class="text-xl font-subheader mb-6 text-[#9F6C52]">Amenities</h3>
					<div class="space-y-6">
						<div>
							<p class="font-bold text-sm uppercase tracking-wider mb-1">Clubhouse</p>
							<p class="opacity-80">Community clubhouse access</p>
						</div>
						<div>
							<p class="font-bold text-sm uppercase tracking-wider mb-1">Atmosphere</p>
							<p class="opacity-80">Gated, family-friendly community</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Striped Background Section -->
		<section class="relative py-24 mb-12 overflow-hidden w-screen left-1/2 right-1/2 -ml-[50vw] -mr-[50vw]">
			<div class="absolute inset-0 z-0 bg-cover bg-center" 
				 style="background-image: url('/Sherri-Beach-Home/images/pattern.png');">
			</div>
			<div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
				<!-- Content can go here if needed, or keep it as a visual break -->
			</div>
		</section>
		<section class="bg-[#92ABBB] text-[#EEE7DD] rounded-[3rem] p-12 md:p-24 text-center">
			<h2 class="text-4xl md:text-6xl mb-8">Ready for your vacation?</h2>
			<p class="text-lg md:text-xl mb-12 opacity-90 max-w-2xl mx-auto">
				We are now accepting inquiries for the 2026 season. Contact us to reserve your dates.
			</p>
			<a href="/Sherri-Beach-Home/book" class="inline-block bg-[#9F6C52] text-[#EEE7DD] px-12 py-5 rounded-full font-subheader text-sm tracking-widest hover:scale-105 transition-transform uppercase">
				View Availability
			</a>
		</section>
	</div>
</Layout>
