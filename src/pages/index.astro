---
import Layout from '../layouts/Layout.astro';
import Gallery from '../components/Gallery.astro';
---

<Layout title="Welcome">
	<div class="max-w-6xl mx-auto px-6">
		<!-- Hero Section -->
		<section class="relative h-[80vh] mb-20 flex items-center justify-center overflow-hidden w-screen left-1/2 right-1/2 -ml-[50vw] -mr-[50vw]">
			<!-- Background Pattern -->
			<div class="absolute inset-0 z-0 opacity-100 bg-cover bg-center pointer-events-none" 
				 style="background-image: url('/Sherri-Beach-Home/images/pattern.png');">
			</div>
			
			<div class="relative z-20 w-full max-w-5xl mx-auto px-4">
				<div class="bg-[#A7B9C6]/90 backdrop-blur-sm p-12 md:p-24 rounded-3xl text-center shadow-2xl">
					<h1 class="text-[#EEE7DD] text-6xl md:text-8xl mb-6 drop-shadow-lg uppercase tracking-wider font-header">Escape to the Cape</h1>
				</div>
			</div>
		</section>

		<!-- Introduction -->
		<section class="max-w-3xl mx-auto text-center mb-32">
			<p class="font-subheader text-sm mb-4 tracking-[0.3em] opacity-80">Since 2026</p>
			<h2 class="text-4xl md:text-5xl mb-8">A Coastal Retreat</h2>
			<div class="text-lg md:text-xl leading-relaxed space-y-6 opacity-90">
				<p>
					Welcome to our slice of paradise in Cape San Blas, Florida. Nestled between the crystal-clear Gulf of Mexico and the calm St. Joseph Bay, 
					Sherri's Beach Home offers the perfect blend of luxury, comfort, and natural beauty.
				</p>
			</div>
		</section>

		<Gallery />

		<!-- Ready for vacation CTA -->
		<section class="bg-[#92ABBB] text-[#EEE7DD] rounded-[3rem] p-12 md:p-24 text-center">
			<h2 class="text-4xl md:text-6xl mb-8">Ready for your vacation?</h2>
			<p class="text-lg md:text-xl mb-12 opacity-90 max-w-2xl mx-auto">
				We are now accepting inquiries for the 2026 season. Contact us to reserve your dates.
			</p>
			<a href="/Sherri-Beach-Home/book" class="inline-block bg-[#9F6C52] text-[#EEE7DD] px-12 py-5 rounded-full font-subheader text-sm tracking-widest hover:scale-105 transition-transform uppercase">
				View Availability
			</a>
		</section>
	</div>
</Layout>
